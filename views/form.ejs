<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

<body>
    <section>
        <div class="container">
            <div class="row">
                <h2 style="text-align: center; color: brown;">
                    Movie project
                </h2>
            </div>
            <div class="row">
                <form action="/insertdata" method="post" enctype="multipart/form-data">
                    <table  style="color: brown;">
                        <tr>
                            <td>
                                <input type="hidden" name="editid" value="<%= single.id %>"/>
                            </td>
                        </tr>
                        <tr>
                            <td class="mb-2">
                                movie name  :-
                            </td>
                            <td>
                                <input type="text" placeholder="enter the movie name" class="mb-2" value="<%= single.name %>" name="name"><br>
                            </td>
                        </tr>
                        
                        <tr>
                            <td class="mb-2">
                                director name :-
                            </td>
                            <td>
                                <input type="text" placeholder="enter the director name" class="mb-2" name="director" value="<%=single.director%>"><br>
                            </td>
                            <br>
                        </tr>
                        <tr>
                            <td class="mb-2">
                                writer name :-
                            </td>
                            <td>
                                <input type="text" placeholder="enter the writer name" class="mb-2" name="writer" value="<%=single.writer%>"><br>
                            </td>
                            <br>
                        </tr>
                        <tr>
                            <td class="mb-2">
                                actors name :-
                            </td>
                            <td>
                                <input type="text" placeholder="enter the actors name" class="mb-2" name="actors" value="<%=single.actors%>"><br>
                            </td>
                            <br>
                        </tr>
                        <tr>
                            <td class="mb-2">
                                language :-
                            </td>
                            <td>
                                <input type="radio" <% if(single.language == "hindi"){ %> checked <% } %>  class="mb-2" name="language" value="hindi">hindi
                                <input type="radio" <% if(single.language == "gujrati"){ %> checked <% } %> class="mb-2" name="language" value="gujrati">gujrati
                                <input type="radio" <% if(single.language == "english"){ %> checked <% } %> class="mb-2" name="language" value="english">english
                            </td>
                        </tr>
                        <tr>
                            <td class="mb-2">
                                country:-
                            </td>
                            <td>
                                <select id="" class="mb-2" name="country">
                                    <option value="">---country---</option>
                                    <% let country=['india','uk','us']  %>
                                      <%  for(let i in country ){ %>
                                        <option <% if(single.country == country[i]){ %> selected <% } %> value="<%= country[i] %>"><%= country[i] %></option>
                                     <% } %>
                                </select><br>
                            </td>
                        </tr>
                        <tr>
                            <td class="mb-2">
                                Upload Image
                            </td>
                            <td>
                                <input type="file" name="avatar">
                            </td>
                        </tr>
                        <tr>
                            <td class="mb-2">
                               
                            </td>
                            <td>
                                <%if(single){ %>
                                    <input type="submit"  class="mb-2" value="edit"><br> 
                                <% } else { %>
                                    <input type="submit"  class="mb-2"><br>
                                <%}%>
                            </td>
                        </tr>
                    </table>
    
                </form>
            </div>
        </div>
    </section>  
    <section>
        <div class="container">
            <div class="row">
                <table style="color:darkblue">
                    <th>
                       movie name
                    </th>
                    <th>
                       book director
                    </th>
                    <th>
                        book writer
                    </th>
                    <th>
                        book actors
                    </th>
                    <th>
                        language
                    </th>
                    <th>
                        country
                    </th>
                    <th>
                        action
                    </th>
                    <tbody>
                        <% user.map((val)=>{ %>
                           <% const{id,name,director,writer,actors,language,country,avatar}=val %>
                           <tr>
                            <td><%=name%></td>
                            <td><%=director%></td>
                            <td><%=writer%></td>
                            <td><%=actors%></td>
                            <td><%=language%></td>
                            <td><%=country%></td>
                            <td>
                                <img src="<%= avatar%>" alt="pic" srcset="" width="100">
                            </td>
                            <td>
                                <a href='/deletedata?id=<%= id %>'>delete</a> ||
                                <a href='/edit?id=<%= id %>'>edit</a>
                            </td>
                           </tr>
                       <% })%>


                    </tbody>
                    
                </table>
            </div>
        </div>
    </section>

</body>


